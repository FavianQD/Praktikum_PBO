class Mahasiswa:
    def __init__(self):
        self.panjang = 0
        self.lebar = 0
        self.nama = "Favian Qintara Daffa -"
        self.nim = "064002100014"
        self.fakultas = "Teknik Industri"
        self.hobi = "Jalan-Jalan"

    def hitung_luas_persegi_panjang(self):
        return self.panjang * self.lebar

    def info_persegi_panjang(self):
        return f"{self.nama} {self.nim}\nSistem penghitung luas persegi panjang\nBila persegi panjang memiliki panjang {self.panjang}cm dan lebar {self.lebar}cm maka luasnya sebesar {self.hitung_luas_persegi_panjang()}cm^2"

if __name__ == "__main__":
    mhs = Mahasiswa()
    mhs.panjang = 20
    mhs.lebar = 12
    print(mhs.info_persegi_panjang())
